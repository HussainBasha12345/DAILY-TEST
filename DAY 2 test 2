#include<stdio.h>
int main ()
{
    int arr[] = {3, -5, 1, -8, 4, -2, -6, 7};
    int size = sizeof(arr) / sizeof(arr[0]);
    printf("Positive numbers: ");
    for(int i = 0; i < size; i++) 
	{
        if (arr[i] > 0)
		 {
            printf("%d ", arr[i]);
        }
    }
    printf("\nNegative numbers: ");
    for(int i = 0; i < size; i++)
	 {
        if (arr[i] < 0) 
		{
            printf("%d ", arr[i]);
        }
    }
    
    return 0;
}
